{
    "clangd.path": "/usr/bin/clangd",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build",
        "--background-index",
        "--completion-style=detailed",
        "--header-insertion=never",
        "--log=info",
        "--pretty"
    ],
    "[cpp]": {
        "editor.formatOnSave": false
    },
    "[c]": {
        "editor.formatOnSave": false
    }
}